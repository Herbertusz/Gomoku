<div style="margin: 20px 0;">
	<% if (login){ %>
		<aside class="online">
			<ul>
				<% users.forEach(function(user){ %>
					<li data-id="<%- user.id %>" class="<% if (userId === user.id){ %>hidden-weak<% } %>">
						<label>
							<input class="user-select" type="checkbox" value="<%- user.id %>" data-name="<%= user.username %>" />
							<span class="status on"></span> <%= user.username %>
						</label>
					</li>
				<% }); %>
			</ul>
			<button class="start">Chat</button>
		</aside>
		<section class="chatcontainer">
			<div class="chat cloneable" data-room="">
				<div class="bar">
					<span class="users">
						<span class="user-item cloneable" data-id="">
							<span class="status"></span>
							<span class="name"></span>
							<span class="throw" title="Kidobás"></span>
						</span>
					</span>
					<span class="close" title="Kilépés"></span>
				</div>
				<ul class="list"></ul>
				<div class="form">
					<div class="indicator"></div>
					<textarea class="message" placeholder="Üzenet"></textarea>
					<div class="submitmode">
						<label><input class="send-switch" type="checkbox" value="1" checked="checked" /> Küldés enter megnyomására</label>
						<button class="send hidden-weak">Küldés</button>
					</div>
				</div>
			</div>
		</section>
		<div class="clearfix"></div>
	<% }else{ %>
		Jelentkezzé be!
	<% } %>
</div>
